{
  "name": "typescript-library-template",
  "version": "1.0.0",
  "description": "ts函数库项目模版",
  "main": "lib/index.js",
  "module": "lib/index.esm.js",
  "typings": "lib/types/src/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "prebuild": "rimraf lib",
    "prebuild:prod": "rimraf lib",
    "doc:build": "typedoc --options ./typedoc.config.json",
    "build": "eslint && rollup -c rollup.config.dev.ts",
    "build:prod": "eslint && rollup -c rollup.config.prod.ts",
    "lint": "eslint ./src --fix",
    "format": "prettier --write .",
    "test": "jest --coverage",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qianxunyimeng/typescript-library-template.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/qianxunyimeng/typescript-library-template/issues"
  },
  "homepage": "https://github.com/qianxunyimeng/typescript-library-template#readme",
  "devDependencies": {
    "@babel/core": "^7.17.8",
    "@babel/node": "^7.16.8",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^21.0.3",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-typescript": "^8.3.1",
    "@types/jest": "^27.4.1",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "eslint": "^8.13.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": ">=6",
    "jest": "^27.5.1",
    "lint-staged": ">=10",
    "lodash.camelcase": "^4.3.0",
    "prettier": "2.6.2",
    "rollup": "^2.70.1",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.31.2",
    "source-map-resolve": "^0.6.0",
    "ts-jest": "^27.1.4",
    "tslib": "^2.3.1",
    "typedoc": "^0.22.15",
    "typescript": "^4.6.3"
  },
  "lint-staged": {
    "*.{js,css,md,ts,tsx}": [
      "prettier --write"
    ]
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "jsdom",
    "testRegex": "/test/.*\\.(test|spec)\\.(ts)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverageFrom": [
      "src/*.{js,ts}",
      "src/**/*.{js,ts}",
      "!src/index.ts"
    ]
  }
}
